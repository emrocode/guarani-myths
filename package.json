{
  "name": "guarani-myths",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22.x"
  },
  "packageManager": "npm@11.7.0",
  "scripts": {
    "dev": "npm run dev:client",
    "build": "npm run build:client",
    "dev:client": "cd client && rsbuild dev",
    "build:client": "cd client && rsbuild build --environment web",
    "preview:client": "cd client && rsbuild preview",
    "lint:client": "cd client && eslint ./src/ --report-unused-disable-directives --max-warnings 0",
    "lint:fix:client": "cd client && eslint ./src/ --fix",
    "format:client": "cd client && prettier ./src/ --write",
    "format:server": "cd server && prettier ./src/ --write",
    "format": "npm run format:client && npm run format:server"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/env": "^5.0.3",
    "@fastify/helmet": "^13.0.2",
    "@fastify/mongodb": "^9.0.2",
    "@headlessui/react": "^2.2.9",
    "@mdx-js/react": "^3.1.1",
    "clsx": "^2.1.1",
    "darkify-js": "^1.1.11",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "lucide-react": "^0.562.0",
    "prism-react-renderer": "^2.4.1",
    "prop-types": "^15.8.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router": "^7.12.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@rsbuild/core": "1.7.2",
    "@rsbuild/plugin-mdx": "^1.1.1",
    "@rsbuild/plugin-react": "1.4.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/mdx": "^2.0.13",
    "@types/prop-types": "^15.7.15",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^17.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rehype-slug": "^6.0.0",
    "tailwindcss": "^4.1.18"
  }
}