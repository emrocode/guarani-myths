{
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "api/index.js" },
    { "source": "/static/:path*", "destination": "client/static/$1" },
    { "source": "/:path*", "destination": "client/index.html" }
  ]
}
