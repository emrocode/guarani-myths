{
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "client/dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "api/index.js" },
    { "source": "/favicon.ico", "destination": "/favicon_48x48.png" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
